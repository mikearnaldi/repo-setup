{
    "compilerOptions": {
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "declarationMap": true,
        "declaration": true,
        "moduleResolution": "Node",
        "incremental": true,
        "composite": true,
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noErrorTruncation": true,
        "isolatedModules": false,
        "target": "ES2021",
        "module": "ESNext"
    },
    "exclude": [
        "**/dist",
        "**/node_modules"
    ]
}